@model TestG.Models.CTNhapKhoVT

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container mt-4">
    <h2 class="mb-4">Nhập linh kiện</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.IDNhapKho)
    <div class="card">
        <div class="card-body">
            <div class="form-group row">
                <label for="IDVatTu" class="col-sm-4 col-form-label text-right">Linh kiện:</label>
                <div class="col-sm-8">
                    <select name="IDVatTu" class="form-control">
                        @foreach (var item in new TestG.Models.MapLinhKien().DanhSach())
                        {

                            <option value="@item.IDVatTu">
                                @item.Ten - @string.Format("{0:#,0}", item.Gia) VNĐ

                            </option>

                        }
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label for="SoLuong" class="col-sm-4 col-form-label text-right">Số lượng:</label>
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </div>
        </div>
    </div>
</div>
}
