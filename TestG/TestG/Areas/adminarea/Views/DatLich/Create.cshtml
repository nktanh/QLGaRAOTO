@model TestG.Models.DATLICH
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/adminarea/Views/Shared/_LayoutAdmi.cshtml";
}

<h2 style="text-align:center">TẠO LỊCH BẢO DƯỠNG</h2>

@using (Html.BeginForm("Create", "DatLich", FormMethod.Post,
    new { @enctype = "mutipart/form-data" }))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container px-5 my-5">
            <form id="contactForm" data-sb-form-api-token="API_TOKEN">

                <div class="form-floating mb-3">
                    <input class="form-control" id="ngayBaoDuong" type="datetime-local" name="dNgayBD" placeholder="Ngày Bảo Dưỡng" required />
                    <label for="ngayBaoDuong">Ngày Bảo Dưỡng</label>
                </div>

                <div class="form-floating mb-3">
                    @Html.DropDownList("IDTiepNhanXe", null, "-- Hãy chọn xe --", new { @class = "form-select", aria_label = "Tiếp nhận xe", @required = "required" })
                    <label for="IDTiepNhanXe">Biển số xe</label>
                    <div class="invalid-feedback">Vui lòng chọn mã tiếp nhận xe.</div>
                </div>

                <div class="form-floating mb-3">
                    @Html.DropDownList("IDTienCong", null, "-- Hãy chọn dịch vụ --", new { @class = "form-select", aria_label = "Dịch vụ", @required = "required" })
                    <label for="IDTienCong">Dịch vụ</label>
                    <div class="invalid-feedback">Vui lòng chọn dịch vụ.</div>
                </div>

                <label for="ghiChu">Ghi chú</label>
                <div class="form-floating mb-3">
                    <textarea class="form-control" id="ghiChu" name="sGhiChu" type="text" placeholder="" style="height: 10rem;" data-sb-validations="required"></textarea>
                </div>

                <div class="form-floating mb-3">
                    @Html.DropDownList("sTinhTrang", new SelectList(
                        new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Chưa bảo dưỡng", Value = "false" },

                        }, "Value", "Text"), new { @class = "form-control" })
                    <label for="TinhTrang">Tình trạng</label>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-warning" />
                    </div>
                </div>

            </form>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại trang đặt lịch", "Index")
</div>

