@model TestG.Models.KhachHang

@{
    ViewBag.Title = "Thêm mới khách hàng";
    Layout = "~/Areas/adminarea/Views/Shared/_LayoutAdmi.cshtml";
}

<h2>Thêm mới khách hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row m-0">
            <div class="form-group col-md-12">
                <label class="control-label col-md-4">Tên khách hàng</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                    
                </div>
            </div>
        </div>

        <div class="row m-0 ">
            <div class="form-group col-md-4">
                <label class="control-label col-md-4">Số điện thoại</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label col-md-4">Địa chỉ</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="form-group ">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />

                <a href="@Url.Action("Index", "VatTus")" class="btn btn-outline-success">
                    Quay lại
                </a>
            </div>

        </div>
    </div>

}
