@model TestG.Models.KhachHang
@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/adminarea/Views/Shared/_LayoutAdmi.cshtml";
}
@using (Html.BeginForm("", "", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-3">

                Ảnh
                <br />
                <img src="@Model.AnhKH" style="width:300px" />

                <p style="padding:90px"> <a href="~/adminarea/KhachHang/CapNhatAnh?id=@Model.IDKhachHang" class="btn btn-info fa-pull-left">UpLoad Ảnh</a></p>


            </div>
            <div class="col-md-6 " style="margin-top:50px">
                Thông tin linh kiện
                <a href="@Url.Action("Index", "KhachHang")" class="btn btn-outline-success fa-pull-right">
                    Quay lại
                </a>
                <a href="~/adminarea/KhachHang/Edit?id=@Model.IDKhachHang" class="btn btn-info fa-pull-right"> Chỉnh sửa thông tin</a>
                <hr />
                <table style="color:black" class="table table-bordered">
                    <tr>
                        <td>
                            Tên
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.TenKH)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Địa chỉ
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.DiaChi)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            Số điện thoại
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.SDT)
                        </td>
                    </tr>

                </table>
            </div>
        </div>

    </div>
}