
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml"; ;
}
<hr />
<style>
    .container-fluid {
        display: none;
    }
</style>

<div class="container-fluid1">
    <div class="row">

        <div class="col-lg-4 col-md-6">
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>Tổng tiền bảo dưỡng</h3>
                    <p style="font-size: 14px; margin-top: 5px;">
                        Số tiền: @string.Format("{0:#,##0}", ViewBag.Tong) đồng
                    </p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="@Url.Action("Index","BaoDuong1")" class="small-box-footer btn btn-primary">Chi tiết <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>Số lượng khách hàng</h3>
                    <p style="font-size: 14px; margin-top: 5px;">
                        Số khách hàng: @ViewBag.TongKH người
                    </p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="@Url.Action("Index", "KhachHangs")" class="small-box-footer btn btn-primary">Chi tiết <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>Số lượng dịch vụ</h3>
                    <p style="font-size: 14px; margin-top: 5px;">
                        Dịch vụ Gara: @ViewBag.TongDV
                    </p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="@Url.Action("Index", "DichVus")" class="small-box-footer btn btn-primary">Chi tiết <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>

    </div>
</div>