@model TestG.Models.DichVu
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/adminarea/Views/Shared/_LayoutAdmi.cshtml";
}
<h2>Cập nhật dịch vụ</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDTienCong)

        <div>
            <div class="form-group col-md-12">
                <label class="control-label col-md-5">Mã dịch vụ</label>
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.IDTienCong, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.IDTienCong, "", new { @class = "text-danger" })
                    @ViewBag.THONGBAO
                </div>
            </div>
        </div>

        <div class="row m-0 ">

            <div class="form-group col-md-4">
                <label class="control-label col-md-4">Tên dịch vụ</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                <label class="control-label col-md-4">Giá dịch vụ</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.GiaTri, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GiaTri, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group" style="text-align:center">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                <a href="@Url.Action("Index", "DichVus")" class="btn btn-outline-success">
                    Quay lại
                </a>
            </div>
        </div>

    </div>
}