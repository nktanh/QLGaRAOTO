@model TestG.Models.DichVu
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/adminarea/Views/Shared/_LayoutAdmi.cshtml";
}
<h2 style="text-align:center">Thêm dịch vụ mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row m-1">
            <div class="form-group col-md-6">
                <label class="control-label col-md-4">Tên dịch vụ</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label col-md-4">Giá dịch vụ</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.GiaTri, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GiaTri, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-offset-2 col-md-10" style=" margin-left:550px">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a href="@Url.Action("Index", "DichVus")" class="btn btn-outline-success">
                Quay lại
            </a>
        </div>
    </div>
}
